{
    "autoClosingPairs": [
        {
            "close": "}",
            "open": "{"
        },
        {
            "close": "]",
            "open": "["
        },
        {
            "close": ")",
            "open": "("
        },
        {
            "close": "'",
            "notIn": ["string", "comment"],
            "open": "'"
        },
        {
            "close": "\"",
            "notIn": ["string"],
            "open": "\""
        },
        {
            "close": "`",
            "notIn": ["string", "comment"],
            "open": "`"
        },
        {
            "close": " */",
            "notIn": ["string"],
            "open": "/**"
        },
        {
            "close": ">",
            "notIn": ["string"],
            "open": "<"
        },
        {
            "close": "}}",
            "notIn": ["string", "comment"],
            "open": "{{"
        },
        {
            "close": "}}}",
            "notIn": ["string", "comment"],
            "open": "{{{"
        },
        {
            "close": "---",
            "notIn": ["string", "comment"],
            "open": "---"
        },
        {
            "close": "</script>",
            "notIn": ["string", "comment"],
            "open": "<script>"
        },
        {
            "close": "</template>",
            "notIn": ["string", "comment"],
            "open": "<template>"
        },
        {
            "close": "</style>",
            "notIn": ["string", "comment"],
            "open": "<style>"
        }
    ],
    "brackets": [["{", "}"], ["[", "]"], ["(", ")"], ["<", ">"], ["{{", "}}"], ["{{{", "}}}"]],
    "comments": {
        "blockComment": ["/*", "*/"],
        "lineComment": "//"
    },
    "folding": {
        "markers": {
            "end": "^\\s*(---|</(script|template|style)>|\\{\\{/|<!--\\s*#?endregion\\b.*-->)",
            "start": "^\\s*(---|<(script|template|style)>|\\{\\{#|<!--\\s*#?region\\b.*-->)"
        }
    },
    "indentationRules": {
        "decreaseIndentPattern": "^((?!.*?\\/\\*).*\\*/)?\\s*[\\}\\]].*$|^\\s*</(script|template|style)>\\s*$",
        "increaseIndentPattern": "^((?!\\/\\/).)*(\\{[^}\"'`]*|\\([^)\"'`]*|\\[[^\\]\"'`]*|<(?!area|base|br|col|embed|hr|img|input|link|meta|param|source|track|wbr)\\w[^>]*(?<!/)>)$"
    },
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["'", "'"],
        ["\"", "\""],
        ["`", "`"],
        ["<", ">"],
        ["{{", "}}"],
        ["{{{", "}}}"]
    ],
    "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)"
}
